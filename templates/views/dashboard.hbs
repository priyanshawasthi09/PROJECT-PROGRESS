<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard - Remind-me</title>
    <link rel="stylesheet" href="" />
  </head>
  <body>
    <!-- Header with logo and profile -->
    <header class="header">
      <div class="logo">Remind-me</div>
      <div class="profile-section">
        <button class="profile-button" onclick="toggleProfileMenu()">
          Profile
        </button>
        <div class="profile-menu" id="profileMenu">
          <a href="#">Your account</a>
          <a href="#" onclick="logout()">Logout</a>
        </div>
      </div>
    </header>

    <!-- Main Dashboard Content -->
    <main class="main-content">
      <!-- Welcome Section with Add Expense and Settle Up Buttons -->
      <section class="welcome-section">
        <h2>Welcome to Remind-me!</h2>
        <p>
          Remind-me helps you split bills with friends. Click "Add an expense"
          above to get started, or settle any pending balances!
        </p>
        <div class="action-buttons">
          <button class="cta-button" onclick="openAddExpenseModal()">
            Add an expense
          </button>
          <button class="cta-button" onclick="settleUp()">Settle up</button>
        </div>
      </section>

      <!-- Totals and Lists Section -->
      <section class="balance-summary">
        <div class="balance">
          <p>Total Balance: <span id="total-balance">$0.00</span></p>
          <p>You Owe: <span id="you-owe">$0.00</span></p>
          <p>You Are Owed: <span id="you-are-owed">$0.00</span></p>
        </div>
        <div class="lists">
          <div class="list-container">
            <h3>You Owe</h3>
            <ul id="you-owe-list">
              <!-- Owe items will be populated here -->
            </ul>
          </div>
          <div class="list-container">
            <h3>You Are Owed</h3>
            <ul id="you-are-owed-list">
              <!-- Are owed items will be populated here -->
            </ul>
          </div>
        </div>
      </section>

      <!-- Reset Button for Testing -->
    </main>

    <!-- Add Expense Modal -->
    <div class="modal" id="addExpenseModal">
      <div class="modal-content">
        <h2>Add an Expense</h2>
        <input
          type="text"
          id="expense-emails"
          placeholder="Enter friends' emails (comma-separated)"
          required
        />
        <input
          type="text"
          id="expense-description"
          placeholder="Enter a description"
          required
        />
        <input
          type="number"
          id="expense-amount"
          placeholder="Enter amount"
          min="0"
          step="0.01"
          required
        />
        <input type="date" id="expense-date" value="" />
        <button class="cta-button" onclick="saveExpense()">Save</button>
        <button class="cta-button" onclick="closeAddExpenseModal()">
          Cancel
        </button>
      </div>
    </div>

    <script src="dashboard.js"></script>
  </body>
</html>